<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <!-- iso-8859-1 conflicts with header information -->
  <title><%= @page_title %></title>
  <%= stylesheet_link_tag 'base' %>
  <%= stylesheet_link_tag controller.controller_name %>
  <%= javascript_include_tag 'application', 'prototype', 'effects' %>
</head>
<body class="<%= controller.action_name %>">

<div id="whole-page">

<div id="header">
  <h1><%= link_to('Tanya Khovanova', "http://www.tanyakhovanova.com") %></h1>
</div>

<div id="content">
  <%= yield %>
</div>

<div id="footer">
  <ul>
    <li><%= link_or_strong("Home", { :controller => "number_gossip", :action => "index" }) %></li>
    <li><%= link_or_strong("Browse all Properties", { :controller => "number_gossip", :action => "list" }) %></li>
    <li><%= link_or_strong("Links", { :controller => "number_gossip", :action => "links" }) %></li>
    <li><%= link_or_strong("Contact", { :controller => "number_gossip", :action => "contact" }) %></li>
    <li><%= link_or_strong("Credits", { :controller => "number_gossip", :action => "credits" }) %></li>
    <li><%= link_or_strong("Editorial Policy", { :controller => "number_gossip", :action => "editorial_policy" }) %></li>
  </ul>
</div>

<%# debug request %>

</div> <!-- #whole-page -->

<script src="http://www.google-analytics.com/urchin.js" type="text/javascript">
</script>
<script type="text/javascript">
_uacct = "UA-869922-1";
urchinTracker();
</script>

</body>
</html>
